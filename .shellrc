_fzf_comprun() {
  local command=$1
  shift

  case "$command" in
    cd)           fzf --preview "$TREE_CMD {} | head -200"   "$@" ;;
    export|unset) fzf --preview "eval 'echo \$'{}"         "$@" ;;
    ssh)          fzf --preview 'comm -13 <(ssh -G non-existing-host | sort) <(ssh -G {} | sort)' "$@" ;;
    *)            fzf --preview 'fzf-preview.sh {}' "$@" ;;
  esac
}

