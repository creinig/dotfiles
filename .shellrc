# List processes listening on TCP ports
# From https://stackoverflow.com/a/30029855/1814922
listening() {
    if [ $# -eq 0 ]; then
        sudo lsof -iTCP -sTCP:LISTEN -n -P +c 15
    elif [ $# -eq 1 ]; then
        sudo lsof -iTCP -sTCP:LISTEN -n -P +c 15 | grep -i -E --color $1
    else
        echo "Usage: listening [pattern]"
    fi
}

