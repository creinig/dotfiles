#!/bin/sh

if ! echo $PATH | grep -q ".local/bin" ; then
    PATH=$HOME/.local/bin:$PATH
fi

#
# Integrate useful tools if they are present
#

if command -v most > /dev/null 2>&1; then
    export PAGER="most"
fi

if command -v vim > /dev/null 2>&1; then
    export EDITOR="vim"
fi

if command -v pinfo > /dev/null 2>&1; then
    alias man="pinfo --apropos"
fi

if command -v bat >/dev/null 2>&1; then
    alias cat="bat"
    export BAT_STYLE=changes
    export BAT_PAGER=less # 'most' has some problems with the escape sequences
fi

if command -v rg >/dev/null 2>&1; then
    export FZF_DEFAULT_COMMAND='rg --files --hidden'
    export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
fi

if command -v exa >/dev/null 2>&1 ; then
    alias ls='exa'
    alias ll='exa -lbGFagh --git --group-directories-first --color-scale'
    alias llm='exa -lbGFagh --git --sort=modified --color-scale'
    alias tree='exa --tree --level=2'
else
    alias ls='ls -F --color=tty'
    alias ll='ls -laFh --color=tty --group-directories-first'
    alias llm='ls -laFh --color=tty --sort=time'
fi

# Workaround for 'vagrant ssh' in cygwin
export VAGRANT_PREFER_SYSTEM_BIN=1


